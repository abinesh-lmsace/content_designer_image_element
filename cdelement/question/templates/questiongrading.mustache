{{!
    @template cdelement_question/questiongrading

    Template for the question element grading form

    Example context (json):
    {

    }
}}

<form action="#" method="post" class="mform" id="manualgradingform">

    <input type="hidden" name="id" id="id_id" value="{{id}}">
    <input type="hidden" name="cmid" id="id_cmid" value="{{cmid}}">
    <input type="hidden" name="userid" id="id_userid" value="{{userid}}">
    <input type="hidden" name="slot" id="id_slot" value="{{slot}}">
    <input type="hidden" name="sesskey" id="id_sesskey" value="{{sesskey}}">

    {{{question}}}

    <div class="action-buttons">
        <div class="fitem fitem_actionbuttons fitem_fsubmit mt-3">
            <fieldset class="felement fsubmit">
                <input id="id_submitbutton" type="submit" name="submit" class="btn btn-primary" value="{{#str}}save, mod_quiz{{/str}}"/>
                <input type="button" class="btn btn-secondary" value="{{#str}}cancel, core{{/str}}" data-initial-value="{{#str}}cancel, core{{/str}}">
            </fieldset>
        </div>
    </div>

</form>
